@model FloripaSurfClubWeb.Models.Account.RegistrarUsuarioInputModel

<div class="container" style="margin-top: 100px;">
    <div class="row">
        <div class="col-md-4 col-lg-4 col-sm-12 m-auto">
            <div class="container-fluid p-3 card-sobreado">
                <div class="row" style="border-bottom: solid #7e7878;">
                    <h3 class="text-center">Registro de usuário</h3>
                </div>
                <form asp-asp-controller="Account" asp-action="Registrar" class="m-0 p-0">
                    <div class="row mt-3">
                        <div class="col-12">
                            <div>
                                <label class="text-bold">
                                    <i class="fa fa-user-circle" aria-hidden="true"></i>
                                    Nome do Usuário
                                </label>
                            </div>
                            <div>
                                <input type="text" asp-for="Nome" class="form-control input-login" />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div>
                                <label>
                                    <i class="fa fa-envelope" aria-hidden="true"></i>
                                    Email
                                </label>
                            </div>
                            <div>
                                <input type="email" asp-for="Email" class="form-control input-login" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div>
                                <i class="fa fa-id-badge" aria-hidden="true"></i>
                                <label class="text-bold">Telefone</label>
                            </div>
                            <div>
                                <input type="text" asp-for="Telefone" class="form-control input-login" />
                                <span asp-validation-for="Telefone" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div>
                                <label>
                                    <i class="fa fa-key" aria-hidden="true"></i>
                                    Senha
                                </label>
                            </div>
                            <div>
                                <input type="password" asp-for="Senha" class="form-control input-login" />
                                <span asp-validation-for="Senha" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div>
                                <label>
                                    <i class="fa fa-key" aria-hidden="true"></i>
                                    Confirme a Senha
                                </label>
                            </div>
                            <div>
                                <input type="password" asp-for="ConfirmaSenha" class="form-control input-login" />
                                <span asp-validation-for="ConfirmaSenha" class="text-danger"></span>
                            </div>

                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="col-12 mt-3">
                            <button type="submit" class="btn btn-secondary">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                Registrar
                            </button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<div class="position-fixed top-0 end-0 p-3" style="z-index: 11">
    <div class="toast align-items-center text-white bg-success border-0 fade" role="alert" aria-live="assertive" aria-atomic="true" id="successToast">
        <div class="d-flex">
            <div class="toast-body">
                Usuario registrado com sucesso!
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var showToast = '@TempData["ShowToast"]' === 'true';
            if (showToast) {
                var toastElement = new bootstrap.Toast(document.getElementById('successToast'));
                toastElement.show();
            }
        });
    </script>
}